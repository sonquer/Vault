        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vault"
        mc:Ignorable="d"
        Title="Profile recovery code" Height="141.393" Width="622.951" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox IsReadOnly="True" x:Name="RecoveryCodeTextBox" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="595" AcceptsReturn="True" FontSize="14"/>
        <Button x:Name="SaveToFileButton" Content="Save to file" HorizontalAlignment="Left" Margin="471,59,0,0" VerticalAlignment="Top" Width="123" Click="SaveToFileButton_Click"/>
        <Button x:Name="CopyToClipboardButton" Content="Copy to clipboard" HorizontalAlignment="Left" Margin="306,59,0,0" VerticalAlignment="Top" Width="146" Click="CopyToClipboardButton_Click"/>

    </Grid>
</Window>
